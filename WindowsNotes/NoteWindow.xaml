<Window x:Class="WindowsNotes.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Note"
        Width="365"
        Height="427"
        WindowStartupLocation="Manual"
        ResizeMode="CanResizeWithGrip"
        Background="Yellow"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="0"
        Topmost="True">


    <!-- Root layout -->
    <Grid Margin="10" Background="Yellow">


        <Grid.RowDefinitions>
            <!-- Row 0: header (title + "On top") -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: body text area -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <!-- Col 0: Title stretches -->
            <ColumnDefinition Width="287.752"/>
            <!-- Col 1: Checkbox sizes to content -->
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="MiniButton"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,4,8"
                    Width="28"
                    Height="24"
                    FontWeight="Bold"
                    FontSize="14"
                    Background="Transparent"
                    BorderThickness="0"
                    ToolTip="Minimize"
                    Click="MiniButton_Click">_</Button>

        <Button x:Name="CloseButton"
        Grid.Row="0"
        Content="×"
        FontWeight="Bold"
        FontSize="14"
        Width="49"
        Height="25"
        Background="Transparent"
        BorderThickness="0"
        Foreground="Black"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Click="CloseButton_Click" Margin="0,0,2,0"/>

        <!-- HEADER / TITLE BAR -->
        <TextBox x:Name="TitleBox"
                 Grid.Row="0"
                 Grid.Column="0"
                 Margin="0,0,79,0"
                 MinWidth="120"
                 FontWeight="Bold"
                 FontSize="16"
                 BorderThickness="0"
                 Background="Yellow"
                 VerticalAlignment="Top"
                 TextWrapping="NoWrap"/>
        <TextBlock/>


        <!-- BODY -->
        <ScrollViewer Grid.Row="1"
                      Grid.ColumnSpan="2"
                      VerticalScrollBarVisibility="Auto"
                      Background="Yellow">
            <TextBox x:Name="BodyBox"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Background="Yellow" Width="344"/>
        </ScrollViewer>

    </Grid>
</Window>
