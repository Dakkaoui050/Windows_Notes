<Window x:Class="WindowsNotes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows Notes" Height="560" Width="420"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10" Background="Yellow">
        <!-- Top: search + actions -->
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
            <TextBox x:Name="SearchBox" Height="28" Margin="0,0,0,8"
                     TextChanged="SearchBox_TextChanged"
                     ToolTip="Search in titles and bodies" Background="Yellow"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="New" Width="80" Margin="0,0,6,0" Click="New_Click" Background="GreenYellow"/>
                <Button Content="Open" Width="80" Margin="0,0,6,0" Click="Open_Click" Background="GreenYellow"/>
                <Button Content="Delete" Width="80" Click="Delete_Click" Background="GreenYellow"/>
            </StackPanel>
        </StackPanel>

        <!-- Notes list -->
        <ListBox x:Name="NotesList" DisplayMemberPath="Title"
                 MouseDoubleClick="NotesList_MouseDoubleClick" Background="Yellow"/>
    </DockPanel>
</Window>
